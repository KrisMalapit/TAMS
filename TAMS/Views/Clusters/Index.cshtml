@model IEnumerable<TAMS.Models.Cluster>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-text">
                    <h4 class="card-title">Clusters</h4>
                </div>
            </div>

            <div class="card-body">
                <div class="toolbar">

                </div>
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <div class="material-datatables">
                    <table id="tbl" class="table table-striped table-no-bordered table-hover dataTable" style="width: 100%!important">

                        <thead>
                            <tr>

                                <th>Code</th>
                                <th>Name</th>
                                @*<th>Departments</th>*@
                                @*<th>Checker</th>*@
                                <th>Status</th>
                                <th></th>
                            </tr>

                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/core/jquery.min.js"></script>
<script src="~/js/plugins/jquery.dataTables.min.js"></script>


<script>

    $(document).ready(function () {
        var data = [];

         $.ajax({
                        url: "@Url.Action("getData")"
                            , method: "get"
                            , dataType: 'json'

                            , success: function (responsedata) {
                                console.log(responsedata);
                                if (responsedata.status == "success") {


                                    for (var i = 0; i < responsedata.data.length; i++) {

                                        var $id = responsedata.data[i].id;
                                        var $actions =
                                            '<a href="@Url.Action("Edit")?id=' + $id + '"><i class="menu-icon mdi mdi-view-list"></i>Edit</a> | ' +
                                            '<a href="@Url.Action("Details")?id=' + $id + '"><i class="menu-icon mdi mdi-view-list"></i>Details</a>';

                                        data.push([
                                              responsedata.data[i].code
                                            , responsedata.data[i].name
                                            
                                            //, responsedata.data[i].departments
                                            //, responsedata.data[i].username
                                            , responsedata.data[i].status
                                            , $actions
                                        ]);

                                    }



                                    $('#tbl').DataTable({
                                        "data": data,


                                        "pagingType": "full_numbers",
                                        "lengthMenu": [
                                            [10, 25, 50, -1],
                                            [10, 25, 50, "All"]
                                        ],
                                        "pageLength": 50,
                                        responsive: true,
                                        language: {
                                            search: "_INPUT_",
                                            searchPlaceholder: "Search records",
                                        },

                                        //"columnDefs": [
                                        //    { className: "td-actions text-right", targets: 7}
                                        //],
                                        "order": [[0, "desc"]]
                                    });


                                } else {
                                swal("Error!" + responsedata.message, "Please try again", "error");
                                }

                            }
        });



    });
</script>