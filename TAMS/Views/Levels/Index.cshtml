@model IEnumerable<TAMS.Models.Level>

@{
    ViewData["Title"] = "Index";
}


<h2>Index</h2>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon">
                <div class="card-text">
                    <h4 class="card-title">Level List</h4>
                    @*<p class="card-category">Index</p>*@
                </div>
            </div>

            <div class="card-body">
                <a asp-action="Create">Create New</a>
                <div class="toolbar">

                </div>
                <div class="material-datatables">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a asp-action="Details" class="btn btn-info btn-link" asp-route-id="@item.Id"><i class="material-icons">reorder</i></a>
                                        <a asp-action="Edit" class="btn btn-success btn-link" asp-route-id="@item.Id"><i class="material-icons">edit</i></a>
                                        <a asp-action="Delete" class="btn btn-danger btn-link" asp-route-id="@item.Id"><i class="material-icons">close</i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

